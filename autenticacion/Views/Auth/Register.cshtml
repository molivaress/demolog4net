@{
}


<div class="container mt-5 pt-5">

    <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">

            <div class="card">
                <div class="card-header">
                    Register
                </div>
                <div class="card-body">

                    <form asp-controller="Auth" asp-action="Register" method="post">

                        <input class="form-control mb-3" type="text" placeholder="Names" asp-for="Names" required />
                        <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Correo" />
                        <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Clave" />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Register</button>
                        </div>
                        @if (ViewData["Message"] != null)
                        {

                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            </div>
                        }
                        ¿Ya tienes una cuenta? <a href="@Url.Action("Login","Auth")">Login</a>

                    </form>

                </div>

            </div>

        </div>
    </div>

</div>